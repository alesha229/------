MAX_SEARCH_RESULTS=10

# Настройки подписки
TRIAL_PERIOD_DAYS=1
SUBSCRIPTION_PRICE=100.0

# Настройки Robokassa (опционально)
ROBOKASSA_LOGIN=your_shop_id
ROBOKASSA_PASS1=your_password1
ROBOKASSA_PASS2=your_password2
ROBOKASSA_TEST_MODE=1  # 1 для тестового режима, 0 для боевого
