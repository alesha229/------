# Основные настройки бота
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bot_db
DB_USER=postgres
DB_PASS=your_password_here

# Настройки логирования
LOG_LEVEL=INFO

# Настройки мониторинга
PROMETHEUS_PORT=8000

# Настройки поиска
